<header>
  <div id="top-header">
    <div class="container">
      <ul class="header-links pull-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-user-o"></i><%= t ".my_account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>

          <li class="header-text" data-toggle="modal" data-target="#myModal">
            <%= t ".login" %>
          </li>
          <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <%= render "sessions/login_form" %>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="header-logo">
          <%= link_to root_path, class: "logo" do %>
              <%= image_tag "logo1.png" %>
          <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="header-search">
            <%= form_tag products_path, method: "get",
                           enforce_utf8: false do %>
              <%= text_field_tag :search, params[:search], class: "input", placeholder: t(".search_here") %>
              <button type="submit" class="search-btn"><%= t ".search" %></button>
            <% end %>
          </div>
        </div>
        <div class="col-md-3 clearfix">
          <%= render "carts/shopping_cart" %>
        </div>
      </div>
    </div>
  </div>
</header>
<%= render "layouts/navbar" %>
