<div class="row">
<div class="col-md-4 col-md-offset-4 order-details">
  <div class="section-title text-center">
    <h3 class="title">Your Order (<%= order.status%>)</h3>
  </div>
  <div class="order-summary">
    <div class="order-col">
      <div><strong>PRODUCT</strong></div>
      <div><strong>TOTAL</strong></div>
    </div>
    <div class="order-products">
        <% order.order_details.each do |detail| %>
          <div class="order-col">
            <div><%= detail.quantity %> x <%= name_item(detail.product_id) %></div>
            <div><%= total_each_order_detail(detail) %></div>
          </div>
        <% end %>
    </div>
    <div class="order-col">
      <div><strong>TOTAL</strong></div>
      <div><strong class="order-total"><%= order.grand_total %> </strong></div>
    </div>
  </div>
</div>
</div>
