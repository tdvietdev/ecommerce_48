<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
    <%= form_for @order do |f| %>
      <div class="col-md-7">
        <%= render "shared/error_messages", object: f.object %>
        <div class="billing-details">
          <div class="section-title">
            <h3 class="title">Billing address</h3>
          </div>
          <div class="form-group">
            <%= f.text_field :address, placeholder: "Address", class: "input", value: current_user.address %>
          </div>
          <div class="form-group">
            <%= f.phone_field :phone, placeholder: "Phone number", class: "input", value: current_user.phone %>
          </div>
        </div>
        <!-- Order notes -->
        <div class="order-notes">
          <%= f.text_area :comment, placeholder: "Order note", class: "input" %>
        </div>

        <!-- /Order notes -->
      </div>
      <!-- Order Details -->
      <div class="col-md-5 order-details">
        <div class="section-title text-center">
          <h3 class="title">Your Order</h3>
        </div>
        <div class="order-summary">
          <div class="order-col">
            <div><strong>PRODUCT</strong></div>
            <div><strong>TOTAL</strong></div>
          </div>
          <div class="order-products">
            <%= render partial: "item", collection: show_cart %>
          </div>
          <div class="order-col">
            <div><strong>TOTAL</strong></div>
            <div><strong class="order-total"><%= total_money %> </strong></div>
          </div>
        </div>
        <%= f.submit "Order now", class: "primary-btn order-submit" %>
      </div>
      <%= hidden_field_tag "order[user_id]", current_user.id %>
    <% end %>
    </div>
  </div>
</div>
