<tr>
  <td><%= create_index params[:page], index, Settings.suggestion.per_page %></td>
  <td><%= link_to suggestion.user_name, suggestion.user %></td>
  <td><%=  suggestion.created_at.strftime("%F %T") %></td>
  <td><%= suggestion.status %></td>
  <td>
    <%= link_to edit_admin_suggestion_path(suggestion.id),
      method: :get, remote: true do %>
      <%= fa_icon "eye" %>
    <% end %>
  </td>
</tr>
