<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <br>
        <%= form_for [:admin, @config_mail],
          class: "form-horizontal form-label-left" do |f| %>
          <div class="form-horizontal form-label-left">
            <div class="form-group">
              <%= f.label :address, class:
                  "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :address, class:
                    "form-control col-md-7 col-xs-12" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :user_name, class:
                  "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :user_name, class:
                    "form-control col-md-7 col-xs-12" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, class:
                  "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :password, class:
                    "form-control col-md-7 col-xs-12" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :port, class:
                  "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :port, class:
                    "form-control col-md-7 col-xs-12" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :domain, class:
                  "control-label col-md-3 col-sm-3 col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :domain, class:
                    "form-control col-md-7 col-xs-12" %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= f.submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
