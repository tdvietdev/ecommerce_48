<%= @category.name %>
<%= link_to new_admin_category_path(id: @category.id),
  remote: true do %>
  <%= fa_icon "plus" %>
<% end %>
  |
<%= link_to edit_admin_category_path(@category), remote: true do %>
  <%= fa_icon "edit" %>
<% end %>
  |
<%= link_to [:admin, @category], method: :delete,
  data: {confirm: t(".confirm")}, remote: true do %>
  <%= fa_icon "trash" %>
<% end %>
  |
<%= link_to select_branch_admin_category_path(@category), remote: true do %>
  <%= fa_icon "arrow-circle-right" %>
<% end %>
