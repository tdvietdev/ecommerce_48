<div class="right" role="main">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th><%= t ".name" %></th>
              <th> <%= @product.name %> </th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <th><%= t ".id" %></th>
              <th> <%= @product.id %> </th>
            </tr>
            <tr>
              <th><%= t ".price" %></th>
              <th> <%= @product.price %> </th>
            </tr>
            <tr>
              <th><%= t ".quantity" %></th>
              <th> <%= @product.quantity %> </th>
            </tr>
            <tr>
              <th><%= t ".category" %></th>
              <th> <%= @product.category.get_path %> </th>
            </tr>
            </tbody>
          
          </table>
          <p><strong><%= t ".exit_image" %>:</strong></p>
          <div style="overflow: hidden;border: 1px solid #CCC;padding: 10px;">
            <% @product.images.each do |picture| %>
              <img src="<%= picture.image.url %>" style="float: left; width: 20%;"/>
            <% end %>
          </div>
          <%= link_to t(".back"), admin_products_path %>
        </div>
      </div>
    </div>
  </div>
</div>
