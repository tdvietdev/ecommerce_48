<div class="right" role="main">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th><%= t ".stt" %></th>
              <th><%= t ".percent" %></th>
              <th><%= t ".start_date" %></th>
              <th><%= t ".end_date" %></th>
            </tr>
            </thead>
            <tbody>
            <% @promotions.each_with_index do |promotion, index| %>
              <tr>
                <td>
                  <%= create_index params[:page], index,
                    Settings.promotion.per_page %>
                </td>
                <td><%= promotion.percent %></td>
                <td><%= promotion.start_date %></td>
                <td><%= promotion.end_date %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div class="text-center">
            <%= paginate @promotions, theme: "twitter-bootstrap-3" %>
          </div>
          <div class="text-center">
            <h3 class="text-center">
              <%= t(".current_price") + @product.current_price.to_s %>
            </h3><br>
            <%= link_to "Promotion manager", admin_product_promotions_path(@product) %>
          </div>
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
