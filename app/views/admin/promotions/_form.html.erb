<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel">
			<div class="x_content">
				<br>
				<%= form_for [:admin, @product, @promotion],
          class: "form-horizontal form-label-left", remote: true  do |f| %>
          <%= render "shared/error_messages", object: f.object %>
					<div class="form-horizontal form-label-left">
						<%= f.hidden_field :product_id %>
						<div class="form-group">
							<%= f.label :percent, class:
              "control-label col-md-3 col-sm-3 col-xs-12" %>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= number_field_tag("promotion[percent]", @promotion.percent,
                  options = {
                    class: "form-control col-md-7 col-xs-12",
                    min: 0, max: 100, step:5, value:@promotion.percent
                  }) %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :start_date, class:
                "control-label col-md-3 col-sm-3 col-xs-12" %>
							<div class="input-group date col-md-6 col-sm-6 col-xs-12"
                id="start_date">
								<%= f.text_field :start_date, class: "form-control" %>
								<span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
						</div>
						</div>
						<div class="form-group">
							<%= f.label :end_date, class:
              "control-label col-md-3 col-sm-3 col-xs-12" %>
							<div class="input-group date col-md-6 col-sm-6 col-xs-12"
                id="end_date">
								<%= f.text_field :end_date, class: "form-control" %>
								<span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
						</div>
						</div>
						<div class="form-group text-center">
							<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
								<%= f.submit %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
