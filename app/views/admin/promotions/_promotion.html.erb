<tr>
  <td>
    <%= create_index params[:page], index, Settings.promotion.per_page %>
  </td>
  <td><%= promotion.percent %></td>
  <td><%= promotion.start_date %></td>
  <td><%= promotion.end_date %></td>
  <td>
    <%= link_to [:admin, @product, promotion], remote: true do %>
      <%= fa_icon "eye" %>
    <% end %>
  </td>
  <td>
    <%= link_to edit_admin_product_promotion_path(@product, promotion),
      remote: true do %>
      <%= fa_icon "edit" %>
    <% end %>
  </td>
  <td>
    <%= link_to [:admin, @product, promotion], method: :delete,
      data: {confirm: t(".confirm")} do %>
      <%= fa_icon "trash" %>
    <% end %>
  </td>
</tr>
