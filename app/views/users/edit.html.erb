<div class="container">
  <div id="register" class="animate form registration_form">
    <section class="login_content">
      <%= form_for @user do |f| %>

        <h1><%= t ".text" %></h1>

        <%= render "shared/error_messages", object: f.object %>

        <%= f.text_field :name, placeholder: t(".name"),
          class: "form-control" %>

        <%= f.email_field :email, placeholder: t(".email"),
          class: "form-control" %>

        <%= f.phone_field :phone, placeholder: t(".phone"),
          class: "form-control" %>

        <%= f.text_field :address, placeholder: t(".address"),
          class: "form-control" %>

        <%= f.password_field :password, placeholder: t(".pass"),
          class: "form-control"%>

        <%= f.password_field :password_confirmation,
          placeholder: t(".confirm"), class: "form-control" %>

        <%= f.submit t(".submit"), class: "btn btn-primary" %>
      <% end %>
    </section>
  </div>
</div>
