<div class = "container">
  <div class = "row">
    <div class="section-title text-center">
      <h3>Create suggestion</h3>
    </div>
    <%= form_for @suggestion do |f| %>
    <%= render "shared/error_messages", object: f.object %>
      <%= hidden_field_tag "suggestion[user_id]", current_user.id %>
      <%= f.text_area :content, placeholder: "Content", class: "input", rows: 20 %>
      <br/>
      <%= f.submit "Submit", class: "btn btn-primary center-block"%>
    <% end %>
    <br/>
  </div>
</div>
